<%= form_with(model: project, id: dom_id(project)) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 flex justify-center items-center gap-5">
    <div>
      <%= form.label :content, 'Title', class: "block font-medium text-gray-700" %>
      <%= form.text_field :content, class: "shadow border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <%= form.submit class: "py-2 mt-8 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

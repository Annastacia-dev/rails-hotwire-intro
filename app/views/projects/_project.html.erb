<%= turbo_frame_tag dom_id(project) do %>
  <div id="<%= dom_id project %>" class="bg-gray-100 px-8 py-4 rounded">
    <p class="my-5">
      <strong class="font-medium mb-1">Content:</strong>
      <%= project.content %>
    </p>

    <p class="my-5">
      <strong class="font-medium mb-1">Vote:</strong>
      <%= project.vote %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this project", project, class: "rounded-lg py-3 bg-gray-100 inline-block font-medium text-blue-400 underline" %>
      <%= link_to "Edit this project", edit_project_path(project), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium text-blue-400 underline" %>
    <% end %>
  </div>
<% end %>
